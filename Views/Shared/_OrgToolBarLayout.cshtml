@* Header *@
<div id="kt_header" class="header align-items-stretch">
    @* Brand *@
    <div class="header-brand">
        @* Logo *@
        <a href="@Url.Action("Index", "Home")">
            <img alt="Logo" src="@Url.Content("~/assets/images/logo2.png")" class="h-50px h-lg-45px" />
        </a>
        @* Aside minimize *@
        <div id="kt_aside_toggle" class="btn btn-icon w-auto px-0 btn-active-color-primary aside-minimize" data-kt-toggle="true" data-kt-toggle-state="active" data-kt-toggle-target="body" data-kt-toggle-name="aside-minimize">
            <i class="ki-duotone ki-entrance-right fs-1 me-n1 minimize-default">
                <span class="path1"></span>
                <span class="path2"></span>
            </i>
            <i class="ki-duotone ki-entrance-left fs-1 minimize-active">
                <span class="path1"></span>
                <span class="path2"></span>
            </i>
        </div>
        @* Aside toggle *@
        <div class="d-flex align-items-center d-lg-none me-n2" title="Show aside menu">
            <div class="btn btn-icon btn-active-color-primary w-30px h-30px" id="kt_aside_mobile_toggle">
                <i class="ki-duotone ki-abstract-14 fs-1">
                    <span class="path1"></span>
                    <span class="path2"></span>
                </i>
            </div>
        </div>
    </div>
    @* Toolbar *@
    <div class="toolbar d-flex align-items-stretch">
        @* Toolbar container *@
        <div class="container-xxl py-6 py-lg-0 d-flex flex-column flex-lg-row align-items-lg-stretch justify-content-lg-between">
            @* Page title *@
            <div class="page-title d-flex justify-content-center flex-column me-5">
                @* Title *@
                <h1 class="d-flex flex-column text-gray-900 fw-bold fs-3 mb-0">Dashboard</h1>
                @* Breadcrumb *@
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("Index", "Home")" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-300 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">Dashboards</li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-300 w-5px h-2px"></span>
                    </li>
                </ul>
            </div>
            @* User *@
            <div class="aside-user d-flex align-items-sm-center justify-content-center py-5">
                @* Symbol *@
                <div class="symbol symbol-40px" style="border-radius: 10px; border: 1px solid gray; padding: 2px;">
                    <img src="@Url.Content("~/assets/images/logo3.png")" alt="" />
                </div>
                @* Wrapper *@
                <div class="aside-user-info flex-row-fluid flex-wrap ms-5">
                    @* Section *@
                    <div class="d-flex">
                        @* Info *@
                        <div class="flex-grow-1 me-2">
                            @* Username *@
                            <a href="#" class="text-gray-600 text-hover-primary fs-6 fw-bold">SWEADUAE</a>
                            @* Description *@
                            <span class="text-gray-600 fw-semibold d-block fs-8 mb-1">Swead Emaratis Voluntees Society</span>
                        </div>
                        @* User menu *@
                        <div class="me-n2">
                            @* Action *@
                            <a href="#" class="btn btn-icon btn-sm btn-active-color-primary mt-n2" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-start" data-kt-menu-overflow="true">
                                <i class="ki-duotone ki-setting-2 text-muted fs-1">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                </i>
                            </a>
                            @* User account menu *@
                            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg menu-state-color fw-semibold py-4 fs-6 w-275px" data-kt-menu="true">
                                <div class="menu-item px-3">
                                    <div class="menu-content d-flex align-items-center px-3">
                                        @* Avatar *@
                                        <div class="symbol symbol-50px me-5">
                                            <img alt="Logo" src="@Url.Content("~/assets/media/avatars/300-1.jpg")" />
                                        </div>
                                        @* Username *@
                                        <div class="d-flex flex-column">
                                            <div class="fw-bold d-flex align-items-center fs-5">
                                                Max Smith
                                                <span class="badge badge-light-success fw-bold fs-8 px-2 py-1 ms-2">Pro</span>
                                            </div>
                                            <a href="#" class="fw-semibold text-muted text-hover-primary fs-7">max@kt.com</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="separator my-2"></div>
                                <div class="menu-item px-5">
                                    <a href="@Url.Action("Overview", "Account")" class="menu-link px-5">My Profile</a>
                                </div>
                                <div class="menu-item px-5">
                                    <a href="@Url.Action("List", "Projects")" class="menu-link px-5">
                                        <span class="menu-text">My Projects</span>
                                        <span class="menu-badge">
                                            <span class="badge badge-light-danger badge-circle fw-bold fs-7">3</span>
                                        </span>
                                    </a>
                                </div>
                                <div class="menu-item px-5" data-kt-menu-trigger="{default: 'click', lg: 'hover'}" data-kt-menu-placement="right-start" data-kt-menu-offset="-15px, 0">
                                    <a href="#" class="menu-link px-5">
                                        <span class="menu-title">My Subscription</span>
                                        <span class="menu-arrow"></span>
                                    </a>
                                    <div class="menu-sub menu-sub-dropdown w-175px py-4">
                                        <div class="menu-item px-3">
                                            <a href="@Url.Action("Referrals", "Account")" class="menu-link px-5">Referrals</a>
                                        </div>
                                        <div class="menu-item px-3">
                                            <a href="@Url.Action("Billing", "Account")" class="menu-link px-5">Billing</a>
                                        </div>
                                        <div class="menu-item px-3">
                                            <a href="@Url.Action("Statements", "Account")" class="menu-link px-5">Payments</a>
                                        </div>
                                        <div class="menu-item px-3">
                                            <a href="@Url.Action("Statements", "Account")" class="menu-link d-flex flex-stack px-5">
                                                Statements
                                                <span class="ms-2 lh-0" data-bs-toggle="tooltip" title="View your statements">
                                                    <i class="ki-duotone ki-information-5 fs-5">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                        <span class="path3"></span>
                                                    </i>
                                                </span>
                                            </a>
                                        </div>
                                        <div class="separator my-2"></div>
                                        <div class="menu-item px-3">
                                            <div class="menu-content px-3">
                                                <label class="form-check form-switch form-check-custom form-check-solid">
                                                    <input class="form-check-input w-30px h-20px" type="checkbox" value="1" checked="checked" name="notifications" />
                                                    <span class="form-check-label text-muted fs-7">Notifications</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="menu-item px-5">
                                    <a href="@Url.Action("Statements", "Account")" class="menu-link px-5">My Statements</a>
                                </div>
                                <div class="separator my-2"></div>
                                <div class="menu-item px-5" data-kt-menu-trigger="{default: 'click', lg: 'hover'}" data-kt-menu-placement="right-start" data-kt-menu-offset="-15px, 0">
                                    <a href="#" class="menu-link px-5">
                                        <span class="menu-title position-relative">
                                            Language
                                            <span class="ms-2 fs-8 opacity-75 position-absolute translate-middle-y top-50 end-0">
                                                <i class="ki-duotone ki-right fs-5"></i>
                                            </span>
                                        </span>
                                    </a>
                                    <div class="menu-sub menu-sub-dropdown w-175px py-4">
                                        <div class="menu-item px-3">
                                            <a href="@Url.Action("ChangeLanguage", "Account", new { lang = "en" })" class="menu-link d-flex px-5">
                                                <span class="symbol symbol-20px me-4">
                                                    <img class="rounded-1" src="@Url.Content("~/assets/media/flags/united-states.svg")" alt="" />
                                                </span>English
                                            </a>
                                        </div>
                                        <div class="menu-item px-3">
                                            <a href="@Url.Action("ChangeLanguage", "Account", new { lang = "es" })" class="menu-link d-flex px-5">
                                                <span class="symbol symbol-20px me-4">
                                                    <img class="rounded-1" src="@Url.Content("~/assets/media/flags/spain.svg")" alt="" />
                                                </span>Spanish
                                            </a>
                                        </div>
                                        <div class="menu-item px-3">
                                            <a href="@Url.Action("ChangeLanguage", "Account", new { lang = "de" })" class="menu-link d-flex px-5">
                                                <span class="symbol symbol-20px me-4">
                                                    <img class="rounded-1" src="@Url.Content("~/assets/media/flags/germany.svg")" alt="" />
                                                </span>German
                                            </a>
                                        </div>
                                        <div class="menu-item px-3">
                                            <a href="@Url.Action("ChangeLanguage", "Account", new { lang = "ja" })" class="menu-link d-flex px-5">
                                                <span class="symbol symbol-20px me-4">
                                                    <img class="rounded-1" src="@Url.Content("~/assets/media/flags/japan.svg")" alt="" />
                                                </span>Japanese
                                            </a>
                                        </div>
                                        <div class="menu-item px-3">
                                            <a href="@Url.Action("ChangeLanguage", "Account", new { lang = "fr" })" class="menu-link d-flex px-5">
                                                <span class="symbol symbol-20px me-4">
                                                    <img class="rounded-1" src="@Url.Content("~/assets/media/flags/france.svg")" alt="" />
                                                </span>French
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="menu-item px-5 my-1">
                                    <a href="@Url.Action("Settings", "Account")" class="menu-link px-5">Account Settings</a>
                                </div>
                                <div class="menu-item px-5">
                                    <form method="post" action="@Url.Action("Logout", "Account")" class="menu-link px-5">
                                        <button type="submit" class="btn btn-link p-0 text-decoration-none text-gray-600 text-hover-primary">Sign Out</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @* End Menu *@
            </div>
        </div>
    </div>
</div>
